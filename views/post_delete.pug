extends layout

block content
    div(class="p-4 mb-4 text-red-800 border border-red-300 rounded-lg bg-red-50 ")
        div(class="flex items-center")
            svg(class="flex-shrink-0 w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
            span(class="sr-only") info 
            h3(class="text-lg font-medium") Do you really want to Delete this Post ?
        div(class="mt-2 mb-4 text-sm")
            p posted by   #[strong @#{post.user.username}] 
            p title:   #[strong #{post.title}] 
            p body:   #[strong #{post.text}]
        div(class="flex gap-4")
            form(method="post" ) 
                input(type="hidden", name="postID" value= post.id)
                button(type="submit" class="text-red-800 bg-transparent border border-red-800 hover:bg-red-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 text-center") YES
            a(href="/" class="text-red-800 bg-transparent border border-red-800 hover:bg-red-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 text-center") NO